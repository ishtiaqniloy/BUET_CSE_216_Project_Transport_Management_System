  <!-- Global Libraries -->
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  <import file="${basedir}/module_transportmanagementsystem.xml"/>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.transportmanagementsystem, clean.artifact.transportmanagementsystem:jar" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.transportmanagementsystem" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.transportmanagementsystem:jar" value="${basedir}/out/artifacts/TransportManagementSystem_jar"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="artifact.temp.output." value="${artifacts.temp.dir}/"/>
    <property name="temp.unpacked.path.ojdbc6.jar" value="${artifacts.temp.dir}/ojdbc6.jar"/>
    <taskdef resource="com/sun/javafx/tools/ant/antlib.xml" uri="javafx:com.sun.javafx.tools.ant" classpath="${jdk.home.9}/lib/ant-javafx.jar"/>
  </target>
  
  <target name="clean.artifact.transportmanagementsystem:jar" description="clean TransportManagementSystem:jar artifact output">
    <delete dir="${artifact.output.transportmanagementsystem:jar}"/>
  </target>
  
  <target name="artifact.transportmanagementsystem:jar" depends="init.artifacts, compile.module.transportmanagementsystem" description="Build &#39;TransportManagementSystem:jar&#39; artifact" xmlns:fx="javafx:com.sun.javafx.tools.ant">
    <mkdir dir="${artifact.output.transportmanagementsystem:jar}"/>
    <copy todir="${artifact.temp.output.}">
      <fileset dir="${transportmanagementsystem.output.dir}"/>
    </copy>
    <copy todir="${artifact.temp.output.}">
      <fileset dir="${temp.unpacked.path.ojdbc6.jar}/oracle/jdbc/driver/"/>
    </copy>
    <unzip src="${basedir}/../../../../Oracle/ojdbc6.jar" dest="${artifact.temp.output.}"/>
    <fx:fileset id="all_but_" dir="${artifact.temp.output.}" includes="**/*.jar">
      <exclude name=""/>
    </fx:fileset>
    <fx:fileset id="all_" dir="${artifact.temp.output.}" includes="**/*.jar"/>
    <fx:application id="_id" name="TransportManagementSystem:jar" mainClass="TransportManagementSystem.Main"/>
    <fx:jar destfile="${artifact.temp.output.}/">
      <fx:application refid="_id"/>
      <fileset dir="${artifact.temp.output.}" excludes="**/*.jar"/>
      <fx:resources>
        <fx:fileset refid="all_but_"/>
      </fx:resources>
      <manifest>
        <attribute name="Implementation-Title" value="Transport Management System"/>
        <attribute name="Implementation-Version" value=""/>
        <attribute name="Implementation-Vendor" value="1505080-89"/>
      </manifest>
    </fx:jar>
    <fx:deploy width="600" height="400" updatemode="background" outdir="${artifact.temp.output.}/deploy" outfile="" nativeBundles="all">
      <fx:application refid="_id"/>
      <fx:info title="Transport Management System" vendor="1505080-89"/>
      <fx:resources>
        <fx:fileset refid="all_"/>
      </fx:resources>
    </fx:deploy>
    <copy todir="${artifact.output.transportmanagementsystem:jar}">
      <fileset dir="${artifact.temp.output.}/deploy"/>
    </copy>
    <delete includeemptydirs="true">
      <fileset dir="${artifact.temp.output.}"/>
    </delete>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.transportmanagementsystem:jar" description="Build all artifacts">
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
